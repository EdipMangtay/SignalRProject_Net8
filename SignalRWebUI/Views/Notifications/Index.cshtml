@model List<ResultNotificationDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Index</h1>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Bildirim işlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Bildirim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Bildirimler  ile ilgili işlemleri aşağıdan gerçekleştirebilirsin :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Tarih</th>
									<th scope="col">Durumu</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.NotificationID</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>

										<td><a href="/Notifications/DeleteNotification/@item.NotificationID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Notifications/UpdateNotification/@item.NotificationID" class="btn btn-outline-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Notifications/CreateNotification/" class="btn btn-outline-primary">Yeni Bildirim Girşi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>