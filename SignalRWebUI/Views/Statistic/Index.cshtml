<script type="text/javascript">
	$(document).ready(function () {
		// SignalR bağlantısı oluşturuyoruz
		var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7272/SignalRHub").build();
		$("#connstatus").text(connection.state);

		connection.start().then(() => {
			$("#connstatus").text(connection.state);
			setInterval(() => {
				connection.invoke("SendStatistic");
			}, 1000);
		}).catch((err) => { console.log(err); });

		connection.on("ReceiveCategoryCount", (value) => {
			$("#categorycount").text(value);
		});

		connection.on("ReceiveProductCount", (value2) => {
			$("#productcount").text(value2);
		});

		connection.on("ReceiveActiveCategoryCount", (value3) => {
			$("#activecategorycount").text(value3);
		});

		connection.on("ReceivePassiveCategoryCount", (value4) => {
			$("#passivecategorycount").text(value4);
		});

		connection.on("ReceiveProductCountByCategoryNameHamburger", (value5) => {
			$("#productcountbycategorynamehamburger").text(value5);
		});

		connection.on("ReceiveProductCountByCategoryNameDrink", (value6) => {
			$("#productcountbycategorynamedrink").text(value6);
		});

		connection.on("ReceiveProductPriceAvg", (value7) => {
			$("#productpriceavg").text(value7);
		});

		connection.on("ReceiveProductPriceByMax", (value8) => {
			$("#receiveproductpricebymax").text(value8);
		});

		connection.on("ReceiveProductPriceByMin", (value9) => {
			$("#receiveproductpricebymin").text(value9);
		});

		connection.on("ReceiveTotalOrderCount", (value10) => {
			$("#receivetotalordercount").text(value10);
		});

		connection.on("ReceiveActiveOrderCount", (value11) => {
			$("#receiveavticeordercount").text(value11);
		});

		connection.on("ReceiveLastOrderPrice", (value12) => {
			$("#receivelastorderprice").text(value12);
		});

		connection.on("ReceiveTotalMoneyCaseAmount", (value13) => {
			$("#receivetotalmoneycaseamount").text(value13);
		});

		connection.on("ReceiveMenuTableCount", (value14) => {
			$("#receivemenutablecount").text(value14);
		});
	});
</script>
