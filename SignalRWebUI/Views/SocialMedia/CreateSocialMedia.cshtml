@model CreateSocialMediaDto
@{
	ViewData["Title"] = "CreateSocialMedia";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya işlemleri</h4>
		<div class="row">
			<div class="col-md-6">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Sosyal Medya Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlık  Giriniz</label>
								<input type="text" class="form-control" asp-for="Title" id="Title" placeholder="Kategori Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Icon">İkon  Giriniz</label>
								<input type="text" class="form-control" asp-for="Icon" id="Icon" placeholder="Kategori Adı">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Url">Link  Giriniz</label>
								<input type="text" class="form-control" asp-for="Url" id="Url" placeholder="Kategori Adı">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Sosyal Medya Hesabı Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
